<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".starfrag.StarFragment"
    android:background="@color/bgyellow"
    >

    <!-- TODO: Update blank fragment layout -->
   <androidx.viewpager.widget.ViewPager
       android:layout_width="match_parent"
       android:layout_height="220dp"
       android:id="@+id/starfrag_vp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/starfrag_vp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/starfrag_linearlayout"
        />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/starfrag_gv"
        android:numColumns="4"
        android:layout_below="@id/starfrag_vp"
        android:layout_marginTop="100dp"
        />
        
</RelativeLayout>